{
  "acls": [
    {
      "action": "accept",
      "src": ["autogroup:admin"],
      "dst": [
        "tag:brain:22",
        "tag:brain:9000",
        "tag:brain:9443",
        "tag:brain:3000",
        "tag:brain:8428",
        "tag:brain:3100"
      ]
    },
    {
      "action": "accept",
      "src": ["tag:brain"],
      "dst": [
        "tag:muscle:22",
        "tag:muscle:9100",
        "tag:muscle:8080",
        "tag:muscle:{{ tailscale_metrics_port }}"
      ]
    },
    {
      "action": "accept",
      "src": ["tag:muscle"],
      "dst": [
        "tag:brain:8000",
        "tag:brain:9100",
        "tag:brain:8080",
        "tag:brain:{{ tailscale_metrics_port }}"
      ]
    }
  ],
  "tagOwners": {
    "tag:brain": ["autogroup:admin"],
    "tag:muscle": ["autogroup:admin"]
  },
  "hosts": {
    "brain": "{{ hostvars[groups['brain'][0]].tailscale_ip }}",
    "muscle": "{{ hostvars[groups['muscle'][0]].tailscale_ip }}"
  }
}